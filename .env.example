# Database
DATABASE_URL="postgresql://user:password@localhost:5432/saas_db"
# For Docker: DATABASE_URL="postgresql://user:password@db:5432/saas_db"

# API Configuration
API_URL="http://localhost:3001"
# For Docker: API_URL="http://api:3001"
NEXT_PUBLIC_API_URL="http://localhost:3001"
INTERNAL_API_URL="http://localhost:3001"
# For Docker: override INTERNAL_API_URL="http://api:8080" to reach the API container
CORS_ORIGINS="http://localhost:8080"
# For Docker (Next.js on port 8080): include the internal host `http://web:8080`
# When using OrbStack or another VM bridge, include the host network URL exposed by Next.js (e.g. `http://192.168.117.4:8080`).

# Public API Security
# Comma-separated list of label:key pairs. Keys should be high-entropy secrets kept server-side only.
# The default below is safe for local development but MUST be rotated for production.
PUBLIC_API_KEYS="primary:<YOUR_API_KEY_HERE>"
# Allowed clock skew window (milliseconds) for request timestamps.
PUBLIC_API_TIMESTAMP_WINDOW_MS=300000
# Set to true ONLY for debugging without API keys (not recommended).
ALLOW_INSECURE_PUBLIC_API="false"

# Public API Client (Next.js server-side proxy)
# Must match the raw key value from one of the entries in PUBLIC_API_KEYS.
PUBLIC_API_KEY_SECRET="<YOUR_API_KEY_HERE>"

# Clerk Auth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Resend
RESEND_API_KEY="re_..."

# Sentry
SENTRY_DSN="https://..."

# PostHog
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
